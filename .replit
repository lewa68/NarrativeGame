entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Start Web RPG"

[[workflows.workflow]]
name = "Start Web RPG"
author = 42903682
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py web"

[[workflows.workflow]]
name = "Start Console RPG"
author = 42903682
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 5000
externalPort = 80
